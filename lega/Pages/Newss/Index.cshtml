@page "{languageId:int}"
@using Microsoft.AspNetCore.Localization
@model lega.Pages.Newss.IndexModel
@{

    Layout = "/Pages/Shared/_LayoutNews.cshtml";
    @if (Model.LanguageId == 1)
    {
        ViewData["Title"] = "Նորություններ";
    }
    else
    @if (Model.LanguageId == 2)
    {
        ViewData["Title"] = "Новости";
    }
    else
    {
        ViewData["Title"] = "News";
    }
}

<head>

    @if (Model.LanguageId == 1)
    {
        <title>Lega հաշվապահական կազմակերպություն</title>
    }
    else
    @if (Model.LanguageId == 2)
    {
        <title>Lega бухгалтерская компания</title>
    }
    else
    {
        <title>Lega accounting company</title>
    }

</head>


<header id="menu">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                    <a class="navbar-brand" href="#menu"><img width="145" height="60" src="~/images/Logo/logo.png" alt=""></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">

                        @if (Model.LanguageId == 1)
                        {
                            <li><a class="scroll" href="/Index">Վերադարձ հիմնական կայք</a></li>
                            @*  <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/hy.png"/></li>*@

                        }
                        else
                        @if (Model.LanguageId == 2)
                        {
                            <li><a class="scroll" href="/Index">Вернуться на основной сайт</a></li>
                            @*    <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/ru.png" /></li>*@
                        }

                        else
                        {
                            <li><a class="scroll" href="/Index">Return to main website</a></li>
                            @*  <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/en.png" /></li>*@
                        }

                        @*   <li><vc:culture-switcher /></li>*@

                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </div>
</header>


<!--Carousel-Section-Start-->
<section id="slider">
    <div id="home-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach (var item in Model.CarouselList)
            {
                <div class="item @item.State" style="background-image: url(@item.ImageUrl )">
                    <div class="carousel-caption container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12" style="padding-left:7mm">
                                @if (Model.LanguageId == 1)
                                {
                                    <h1>@item.Title</h1>
                                    <h2>@item.Name</h2>
                                    <p>@Html.Raw(item.Context)</p>
                                }
                                else

                                @if (Model.LanguageId == 2)
                                {
                                    <h1>@item.TitleRu</h1>
                                    <h2>@item.NameRu</h2>
                                    <p>@Html.Raw(item.ContextRu)</p>
                                }
                                else
                                {
                                    <h1>@item.TitleEn</h1>
                                    <h2>@item.NameEn</h2>
                                    <p>@Html.Raw(item.ContextEn)</p>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            }
            <a class="home-carousel-left" href="#home-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a> <a class="home-carousel-right" href="#home-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
        </div>
    </div>
    <!--/#home-carousel-->
</section>

<!--News-Section-Start-->
<section id="news">
    <div class="container">

        @if (Model.LanguageId == 1)
        {
            <div class="col-md-8 col-md-offset-2">
                <div style="text-align:center" class="heading">
                    <h2>ԲՈԼՈՐ ՆՈ<span>ՐՈՒԹՅՈՒՆՆԵՐԸ</span></h2>
                    <div class="line"></div>
                   @* <p>
                        <span><strong>Ա</strong></span>յստեղ կարող է լինել հաստատուն տեքս որը կարող է փոփոխվել բայց ծրագրային կոդով
                    </p>*@
                    <br>
                </div>
            </div>
            <div class="row">

                <div class="col-md-12">
                    @foreach (var item in Model.NewsList)
                    {
                        <div class="col-md-4 news-sec">
                            <div class="news-info">
                                <img src="~/images/News/@item.ImageUrl" class="img-responsive">
                                <div class="data-meta">
                                    <h4>@CultureInfo.CreateSpecificCulture("hy-HY").DateTimeFormat.GetAbbreviatedMonthName(item.Date.Month)</h4>
                                    <strong>@item.Date.Day</strong><br>
                                    @item.Date.Year
                                </div>
                                <h5>@item.Title</h5>
                                <h6><i class="fa fa-pencil"></i> @item.Author</h6>
                                <p>@Html.Raw(item.ShortContext)</p>
                                <a target="_blank" href="/Newss/Item/@item.Id/1" class="btn-blg">Կարդալ ավելին</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
        else

        @if (Model.LanguageId == 2)
        {
            <div class="col-md-8 col-md-offset-2">
                <div style="text-align:center" class="heading">
                    <h2>ВСЕ НО<span>ВОСТИ</span></h2>
                    <div class="line"></div>
                   @* <p>
                        <span><strong>Т</strong></span>ам может быть фиксированный текст, который можно изменить, но программный код
                    </p>*@
                    <br>
                </div>
            </div>
            <div class="row">

                <div class="col-md-12">
                    @foreach (var item in Model.NewsList)
                    {
                        <div class="col-md-4 news-sec">
                            <div class="news-info">
                                <img src="~/images/News/@item.ImageUrl" class="img-responsive">
                                <div class="data-meta">
                                    <h4>@CultureInfo.CreateSpecificCulture("ru-RU").DateTimeFormat.GetAbbreviatedMonthName(item.Date.Month)</h4>
                                    <strong>@item.Date.Day</strong><br>
                                    @item.Date.Year
                                </div>
                                <h5>@item.TitleRu</h5>
                                <h6><i class="fa fa-pencil"></i> @item.AuthorRu</h6>
                                <p>@Html.Raw(item.ShortContextRu)</p>
                                <a target="_blank" href="/Newss/Item/@item.Id/2" class="btn-blg">Прочитайте больше</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }
        else
        {

            <div class="col-md-8 col-md-offset-2">
                <div style="text-align:center" class="heading">
                    <h2>ALL NE<span>WS</span></h2>
                    <div class="line"></div>
                   @* <p>
                        <span><strong>L</strong></span>orem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut
                        et dolore magna aliqua. Ut enim ad minim veniam
                    </p>*@
                    <br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    @foreach (var item in Model.NewsList)
                    {
                        <div class="col-md-4 news-sec">
                            <div class="news-info">
                                <img src="~/images/News/@item.ImageUrl" class="img-responsive">
                                <div class="data-meta">
                                    <h4>@CultureInfo.CreateSpecificCulture("en-US").DateTimeFormat.GetAbbreviatedMonthName(item.Date.Month)</h4>
                                    <strong>@item.Date.Day</strong><br>
                                    @item.Date.Year
                                </div>
                                <h5>@item.TitleEn</h5>
                                <h6><i class="fa fa-pencil"></i> @item.AuthorEn</h6>
                                <p>@Html.Raw(item.ShortContextEn)</p>
                                <a target="_blank" href="/Newss/Item/@item.Id/3" class="btn-blg">Read More</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        }

    </div>
</section>





@if (Model.LanguageId == 1)
{

    <footer id="footer">
        <div class="bg-sec">
            <div class="container">
                <h2><strong>Հետեվեք Մեզ </strong></h2>
            </div>
        </div>
    </footer>

}
else
    @if (Model.LanguageId == 2)
{
    <footer id="footer">
        <div class="bg-sec">
            <div class="container">
                <h2><strong>Подписывайтесь на нас </strong></h2>
            </div>
        </div>
    </footer>
}
else
{
    <footer id="footer">
        <div class="bg-sec">
            <div class="container">
                <h2><strong>Follow Us On  </strong></h2>
            </div>
        </div>
    </footer>
}
