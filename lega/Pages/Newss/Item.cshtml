@page "{id:int}"
@using Microsoft.AspNetCore.Localization
@model lega.Pages.Newss.ItemModel
@{
     Layout = "/Pages/Shared/_LayoutNews.cshtml";
    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
    ViewData["Title"] = (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy")) ? "Նորություններ" : "News";
}




<!--Carousel-Section-Start-->
<section id="slider">
    <div id="home-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach (var item in Model.CarouselList)
            {
                <div class="item @item.State" style="background-image:url(@item.ImageUrl)">
                    <div class="carousel-caption container">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                 @if (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy"))
                                {
                                    <h1 style="font-size:25px">@item.Title</h1>
                                    <h2 style="font-size:45px">@item.Name</h2>
                                    <p>@item.Context</p>
                                }
                                else
                                {
                                    <h1 style="font-size:25px">@item.TitleEn</h1>
                                    <h2 style="font-size:45px">@item.NameEn</h2>
                                    <p>@item.ContextEn</p>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            }
            <a class="home-carousel-left" href="#home-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a> <a class="home-carousel-right" href="#home-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
        </div>
    </div>
    <!--/#home-carousel-->
</section>

<!--News-Section-Start-->
<section id="news">
    <div class="container">

        @if (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy"))
        {
            <div class="col-md-8 col-md-offset-2">
                <div class="heading">
                    <h2>ԲՈԼՈՐ ՆՈ<span>ՐՈՒԹՅՈՒՆՆԵՐԸ</span></h2>
                    <div class="line"></div>
                    <p>
                        <span><strong>Ա</strong></span>յստեղ կարող է լինել հաստատուն տեքս որը կարող է փոփոխվել բայց ծրագրային կոդով
                    </p>
                </div>
            </div>
            <div class="row" style="margin-right:10px;margin-left:-65px">

                <div class="col-md-12">

                   
                        <div class="col-md-4 news-sec">
                            <div class="news-info">
                                <img src="@Model.News.ImageUrl" class="img-responsive" alt="">
                                <div class="data-meta">
                                    <h4>@CultureInfo.CreateSpecificCulture("hy-HY").DateTimeFormat.GetAbbreviatedMonthName(Model.News.Date.Month)</h4>
                                    <strong>@Model.News.Date.Day</strong><br>
                                    @Model.News.Date.Year
                                </div>
                                    <h5>@Model.News.Title</h5>
                                <ul class="news-icon">
                                    <li>
                                        <i class="fa fa-pencil"></i>
                                        <h6>@Model.News.Author</h6>
                                    </li>
                                </ul>
                                <p>@Model.News.ShortContext</p>
                                <a href="/Newss/Item/@Model.News.Id" class="btn-blg">Կարդալ ավելին</a>
                            </div>
                        </div>
               

                </div>
            </div>
        }
        else
        {

            <div class="col-md-8 col-md-offset-2">
                <div class="heading">
                    <h2>@Model.News.TitleEn</h2>
                    <div class="line"></div>
                    <p> <i class="fa fa-pencil"></i> @Model.News.AuthorEn</p>
                </div>
            </div>
            <div class="row" style="margin-right:10px;margin-left:-65px">
                        <div class="col-md-12 news-sec">
                            <div class="news-info">
                                <img style="float:left;margin:0 15px 0 0;" width="400"  src="@Model.News.ImageUrl" class="img-responsive" alt="">
                                <div class="data-meta">
                                    <h4>@CultureInfo.CreateSpecificCulture("en-US").DateTimeFormat.GetAbbreviatedMonthName(Model.News.Date.Month)</h4>
                                    <strong>@Model.News.Date.Day</strong><br>
                                    @Model.News.Date.Year
                                </div>
                                <p>@Model.News.ContextEn</p>
                            </div>
                        </div>
            </div>
        }
    </div>
</section>


