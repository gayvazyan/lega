@using Microsoft.AspNetCore.Localization
@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="~/images/icons/lega.ico">
    @if (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy"))
    {
        <title>Lega հաշվապահական կազմակերպություն</title>
    }
    else
    @if (requestCulture.Culture.Name.ToString() == "ru-RU" || (requestCulture.Culture.Name.ToString() == "ru"))
    {
        <title>Lega бухгалтерская компания</title>
    }
    else
    {
        <title>Lega accounting company</title>
    }


    <link rel="stylesheet" href="~/css/bootstrap.css">
    <!--Stylesheets-->
    <link rel="stylesheet" href="~/css/style.css">
    <!--Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!--Animation-->
    <link rel="stylesheet" href="~/css/animate.css">
    <!--Prettyphoto-->
    <link rel="stylesheet" href="~/css/prettyPhoto.css">
    <!--Font-Awesome-->
    <link rel="stylesheet" href="~/css/font-awesome.css">
    <!--Owl-Slider-->
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.css">
    <link rel="stylesheet" href="~/css/owl.transitions.css">

</head>


<body data-spy="scroll" data-target=".navbar-default" data-offset="100">

    <!--Preloader-->
    <div id="preloader">
        <div id="pre-status">
            <div class="preload-placeholder"></div>
        </div>
    </div>

    <!--Navigation-->
    <header id="menu">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                        <a class="navbar-brand" href="#menu"><img width="145" height="60" src="~/images/Logo/logo.png" alt=""></a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">

                            @if (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy"))
                            {
                                  <li><a class="scroll" href="/Index">Վերադարձ հիմնական կայք</a></li>
                                @*  <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/hy.png"/></li>*@

                            }
                            else
                                             @if (requestCulture.Culture.Name.ToString() == "ru-RU" || (requestCulture.Culture.Name.ToString() == "ru"))
                            {
                                 <li><a class="scroll" href="/Index">Вернуться на основной сайт</a></li>
                                @*    <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/ru.png" /></li>*@
                            }

                            else
                            {
                                 <li><a class="scroll" href="/Index">Return to main website</a></li>
                                @*  <li><img style="margin-top:10px;margin-right:10px" src="~/images/Flags/en.png" /></li>*@
                            }

                            <li><vc:culture-switcher /></li>

                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </div>
        </div>
    </header>


    <main role="main">
        @RenderBody()
    </main>




    @if (requestCulture.Culture.Name.ToString() == "hy-AM" || (requestCulture.Culture.Name.ToString() == "hy"))
    {

        <footer id="footer">
            <div class="bg-sec">
                <div class="container">
                    <h2><strong>Հետեվեք Մեզ </strong></h2>
                </div>
            </div>
        </footer>

    }
    else
    @if (requestCulture.Culture.Name.ToString() == "ru-RU" || (requestCulture.Culture.Name.ToString() == "ru"))
    {
        <footer id="footer">
            <div class="bg-sec">
                <div class="container">
                    <h2><strong>Подписывайтесь на нас </strong></h2>
                </div>
            </div>
        </footer>
    }
    else
    {
        <footer id="footer">
            <div class="bg-sec">
                <div class="container">
                    <h2><strong>Follow Us On  </strong></h2>
                </div>
            </div>
        </footer>
    }

    <footer id="footer-down">
        <ul class="social-icon">
            <li class="facebook hvr-pulse"><a target="_blank" href="https://www.facebook.com/Lega-Finance-and-Accounting-157079067764088"><i class="fa fa-facebook-f"></i></a></li>
            @* <li class="linkedin hvr-pulse"><a href="#"><i class="fa fa-linkedin"></i></a></li>*@
        </ul>
    </footer>

    <br />
    <br />

    <script src="~/js/jquery.min.js"></script>
    <!--Boostrap-Jquery-->
    <script src="~/js/bootstrap.js"></script>
    <!--Preetyphoto-Jquery-->
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <!--NiceScroll-Jquery-->
    <script src="~/js/jquery.nicescroll.js"></script>
    <!--Isotopes-->
    <script src="~/js/jquery.isotope.js"></script>
    <!--Wow-Jquery-->
    <script src="~/js/wow.js"></script>
    <!--Count-Jquey-->
    <script src="~/js/jquery.countTo.js"></script>
    <script src="~/js/jquery.inview.min.js"></script>
    <!--Owl-Crousels-Jqury-->
    <script src="~/js/owl.carousel.js"></script>
    <!--Main-Scripts-->
    <script src="~/js/script.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
